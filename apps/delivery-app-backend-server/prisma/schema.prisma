datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vehicle {
  color        String?
  createdAt    DateTime @default(now())
  id           String   @id @default(cuid())
  licensePlate String?
  make         String?
  model        String?
  updatedAt    DateTime @updatedAt
  year         Int?
}

model Driver {
  createdAt           DateTime @default(now())
  driverExperience    Int?
  driverLicenseNumber String?
  driverPassport      String?
  driverPassportImage Json?
  driverRating        Float?
  id                  String   @id @default(cuid())
  rides               Ride[]
  updatedAt           DateTime @updatedAt
}

model Payment {
  amount          Float?
  createdAt       DateTime                  @default(now())
  id              String                    @id @default(cuid())
  paymentMethod   EnumPaymentPaymentMethod?
  paymentStatus   EnumPaymentPaymentStatus?
  ride            Ride?                     @relation(fields: [rideId], references: [id])
  rideId          String?
  transactionDate DateTime?
  updatedAt       DateTime                  @updatedAt
}

model Ride {
  createdAt       DateTime        @default(now())
  driver          Driver?         @relation(fields: [driverId], references: [id])
  driverId        String?
  dropoffLocation String?
  dropoffTime     DateTime?
  fare            Float?
  id              String          @id @default(cuid())
  payments        Payment[]
  pickupLocation  String?
  pickupTime      DateTime?
  status          EnumRideStatus?
  updatedAt       DateTime        @updatedAt
  user            User?           @relation(fields: [userId], references: [id])
  userId          String?
}

model User {
  address          String?
  contactNumber    String?
  createdAt        DateTime @default(now())
  email            String?  @unique
  firstName        String?
  hashedPassword   String?
  homeAddress      String?
  id               String   @id @default(cuid())
  lastName         String?
  password         String
  passwordHash     String?
  phoneNumber      String?
  rides            Ride[]
  roles            Json
  updatedAt        DateTime @updatedAt
  userAddress      String?
  username         String   @unique
  userPasswordHash String?
  userPhoneNumber  String?
}

enum EnumPaymentPaymentMethod {
  Option1
}

enum EnumPaymentPaymentStatus {
  Option1
}

enum EnumRideStatus {
  Option1
}
